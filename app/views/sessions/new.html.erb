<h1>Login</h1>

<% if flash[:alert] %>
    <p id align="notice"><%= flash[:alert] %></p>
    <% end %>

<% form_tag sessions_path do %>
  <div class="field">
  <%= label_tag :email %><br />
  <%= text_field_tag :email %>
</div>
<div class="field">
  <%= label_tag :password %><br />
  <%= password_field_tag :password %>
</div>
<div class="actions">
  <%= submit_tag 'Login'%>
</div>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <title>Youcompare</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<%= link_to "Home", :controller => "welcome", :action => "home" %>  |
<%= link_to "Product Catalogue", products_path %> |
<%= link_to "Leave Site", :controller => "welcome", :action => "thank_you" %>  |
<%= link_to "Register", new_client_path %> |


<div id='header'>
  <% if logged_in? %>
      <%= current_client.email %>
      <%= link_to "Logout", logout_path %>
      <%= link_to "Register", new_client_path %>
  <% else %>
      <%= link_to "Login", login_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>

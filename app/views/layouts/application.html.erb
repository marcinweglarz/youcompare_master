<!DOCTYPE html>
<html>
<head>
  <title>Youcompare</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<%= link_to "Home", :controller => "user_product", :action => "index" %>  |
<%= link_to "Register", new_client_path %> |
<%= link_to "Your Cart", :controller => "carts", :action => "your_cart"  %>

<div id='header'>
  <% if logged_in? %>
      <%= current_client.email %>
      <%= link_to "Logout", logout_path %>
      <% else %>
      <%= link_to "Login", login_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
